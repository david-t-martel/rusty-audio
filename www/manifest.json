  "screenshots": [
    {
      "src": "screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Rusty Audio Player desktop view"
    },
    {
      "src": "screenshot-mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Rusty Audio Player mobile view"
    }
  ],
  "shortcuts": [
    {
      "name": "Play Music",
      "short_name": "Play",
      "description": "Open the player directly",
      "url": "./index.html",
      "icons": [
        {
          "src": "icon-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*", ".mp3", ".wav", ".flac", ".ogg", ".m4a"]
        }
      ]
    }
  },
  "prefer_related_applications": false,
  "related_applications": [],
  "iarc_rating_id": "",
  "protocol_handlers": [
    {
      "protocol": "web+audio",
      "url": "/play?audio=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ]
}
