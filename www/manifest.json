{
  "name": "Rusty Audio Player",
  "short_name": "Rusty Audio",
  "description": "A car-stereo-style audio player built with Rust and WebAssembly featuring real-time spectrum visualization and 8-band equalizer",
  "start_url": "./index.html",
  "display": "standalone",
  "background_color": "#1a1a1a",
  "theme_color": "#4ecdc4",
  "orientation": "any",
  "scope": "/",
  "categories": ["music", "entertainment", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
