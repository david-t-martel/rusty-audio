{
  "name": "rusty-audio",
  "version": "0.2.0",
  "description": "Car-stereo-style desktop audio player built with Rust, egui, and wgpu for WASM",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "dev:miniflare": "wrangler dev --local --persist",
    "dev:watch": "concurrently \"npm run watch:wasm\" \"npm run dev\"",
    "build": "npm run build:wasm && npm run optimize",
    "build:wasm": "trunk build --release",
    "build:debug": "trunk build",
    "build:fast": "wasm-pack build --target web --out-dir dist/pkg --no-typescript --dev",
    "watch:wasm": "trunk watch",
    "optimize": "npm run optimize:wasm && npm run compress",
    "optimize:wasm": "wasm-opt dist/rusty_audio_bg.wasm -Oz --enable-threads --enable-bulk-memory --enable-simd -o dist/rusty_audio_bg.opt.wasm && mv dist/rusty_audio_bg.opt.wasm dist/rusty_audio_bg.wasm",
    "compress": "node scripts/compress-assets.js",
    "serve": "node scripts/dev-server.js --port 8080",
    "serve:prod": "NODE_ENV=production node scripts/dev-server.js --port 8080",
    "test:browser": "playwright test",
    "test:integration": "node scripts/test-integration.js",
    "test:threading": "node scripts/test-threading.js",
    "validate": "node scripts/validate-build.js",
    "health": "node scripts/health-check.js",
    "clean": "rimraf dist target .trunk",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "deploy:cloudflare": "wrangler pages deploy dist",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:vercel": "vercel --prod",
    "preview": "wrangler pages dev dist --port 8788",
    "lint": "eslint scripts/*.js",
    "format": "prettier --write \"scripts/**/*.js\" \"static/**/*.js\"",
    "analyze": "node scripts/analyze-bundle.js"
  },
  "keywords": [
    "audio",
    "player",
    "rust",
    "wasm",
    "webassembly",
    "egui",
    "wgpu",
    "multithreading",
    "pwa"
  ],
  "author": "David Martel",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@playwright/test": "^1.48.2",
    "brotli": "^1.3.3",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "concurrently": "^9.1.0",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eslint": "^9.15.0",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "miniflare": "^3.20241106.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "serve-static": "^1.16.2",
    "terser": "^5.36.0",
    "wrangler": "^3.87.0",
    "ws": "^8.18.0",
    "zlib": "^1.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/rusty-audio.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/rusty-audio/issues"
  },
  "homepage": "https://github.com/yourusername/rusty-audio#readme"
}
